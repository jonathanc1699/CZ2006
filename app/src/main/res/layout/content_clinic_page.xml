<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Control.ClinicPage"
    tools:showIn="@layout/activity_clinic_page"
    android:background="@drawable/appbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_Clinic"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_margin="16dp"
            android:layout_weight="4"
            android:background="@drawable/fullerton"
            android:visibility="visible"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/textview_nameClinic"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_addressClinic"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_openingHoursClinic"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:text="Opening Hours"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textview_phoneClinic"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:text="Phone Number"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_queue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/oval_btn"
                android:backgroundTint="#0191B4"
                android:fontFamily="sans-serif-medium"
                android:text="Take Queue Number"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_direction1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/oval_btn"
                android:backgroundTint="#0191B4"
                android:text="Directions by car"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_direction2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:background="@drawable/oval_btn"
                android:backgroundTint="#0191B4"
                android:text="Directions by walking"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>